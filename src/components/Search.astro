---
import "@pagefind/default-ui/css/ui.css";
---

<form class="original-search" id="search">
  <span class="material-symbols-outlined original-search__icon">search</span>
  <input
    type="text"
    class="original-search__input"
    placeholder="記事を検索..."
  />
</form>
<div class="sp-search">
  <span class="material-symbols-outlined sp-search__icon">search</span>
</div>
<div class="search-overlay" id="search_overlay">
  <div class="search-overlay__wrap">
    <button
      class="material-symbols-outlined search-overlay__close"
      id="closeSearch">close</button
    >
    <div class="search search-overlay__search"></div>
  </div>
</div>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  .original-search {
    width: 200px;
    height: 31.5px;
    border-radius: 5px;
    display: block;
    border: solid 1px #eeeeee;
    display: flex;
    align-items: center;
    gap: 0.5em;
    padding: 0 1em;
    &__input {
      width: 100%;
      height: 100%;
      border-radius: 5px;
    }
    &__icon {
      color: #393939;
      font-size: 1.6rem;
    }
    @include v.mq(w428) {
      display: none;
    }
  }
  .search {
    @include v.searchStyle();
  }
  .sp-search {
    display: none;
    @include v.mq(w428) {
      @include v.iconBtnStyle();
      &__icon {
        font-size: 2rem;
      }
    }
  }
  .search-overlay {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.7);
    transition: 0.5s;
    opacity: 0;
    visibility: hidden;
    &--active {
      opacity: 1;
      visibility: visible;
    }
    &__wrap {
      max-width: 500px;
      background-color: #fff;
      min-height: 20em;
      position: relative;
      padding: 3em 1.6em 1.6em 1.6em;
      border-radius: 10px;
      top: 30%;
      left: 50%;
      transform: translate(-50%, -50%);
      -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
    }
    &__close {
      position: absolute;
      top: 0.4em;
      right: 0.5em;
    }
    &__search {
      width: 100%;
      position: absolute;
      top: 30px;
      left: 50%;
      padding: 1.6em;
      transform: translateX(-50%);
      -webkit-transform: translateX(-50%);
      -ms-transform: translateX(-50%);
    }
    &__icon {
      position: absolute;
      top: 10px;
      right: 10px;
    }
  }
  :root[class="dark-mode"] {
    .original-search {
      border: solid 2px #27272a;
      &__input {
        &::placeholder {
          color: #fff;
        }
      }
      &__icon {
        color: #fff;
      }
    }
    .sp-search {
      border: solid 2px #27272a;
      &__icon {
        color: #fff;
      }
    }
  }
</style>
<script>
  import { PagefindUI } from "@pagefind/default-ui";

  new PagefindUI({
    element: ".search",
    translations: {
      placeholder: "記事を検索",
    },
  });
  const search = document.getElementById("search");
  const closeSearchBtn = document.getElementById("closeSearch");
  const searchOverlay = document.getElementById("search_overlay");

  search?.addEventListener("click", () => {
    searchOverlay?.classList.add("search-overlay--active");
  });
  closeSearchBtn?.addEventListener("click", () => {
    searchOverlay?.classList.remove("search-overlay--active");
  });
</script>
