---
import Search from "./Search.astro";
import ThemeButton from "./ThemeButton.astro";
---

<header class="header">
  <div class="header-inner">
    <h1 class="header-inner__h1" data-pagefind-ignore>
      <a href="/">u2.dev</a>
    </h1>

    <nav class="header-inner__nav">
      <Search />
      <ThemeButton />
    </nav>
  </div>
</header>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  .header {
    width: 100%;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow:
      rgba(27, 31, 35, 0.04) 0px 1px 0px,
      rgba(255, 255, 255, 0.25) 0px 1px 0px inset;
    position: fixed;
    top: 0;
    padding: 0 1.6em;
    z-index: 1;
    color: v.$black;
  }
  .header-inner {
    @include v.common-width;
    margin: 0 auto;
    padding: 1.6em;
    display: flex;
    justify-content: space-between;
    align-items: center;
    &__h1 {
      font-size: 3rem;
      font-weight: 300;
      @include v.mq(w428) {
        font-size: 2.8rem;
      }
    }
    &__nav {
      display: flex;
      gap: 3em;
      align-items: center;
      @include v.mq(w428) {
        gap: 2em;
      }
    }
  }

  .header-inner__nav {
  }
  :root[class="dark-mode"] {
    .header {
      background: rgba(28, 28, 28, 0.5);
    }
    .header-inner {
      &__h1 {
        color: #fff;
      }
    }
  }
</style>
