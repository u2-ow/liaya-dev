<button
  class="audio"
  role="button"
  aria-label="音声を再生する"
  aria-pressed="false">▷</button
>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  .audio {
    background-color: #fafafa;
    border-radius: 3px;
    border: solid 1px #e4e4e7;
    border-radius: 3px;
    padding: 0.2em;
    font-size: 2rem;
    vertical-align: bottom;
    margin-right: 1.6rem;
    margin-top: 1em;
    transition: 0.5s all;
    &:hover {
      background-color: #fff;
    }
  }
  :root[class="dark-mode"] {
    .audio {
      color: #fff;
      background: #0f0f11;
      border: solid 2px #27272a;
    }
  }
</style>
<script is:inline>
  var sound = new Howl({
    src: ["../assets/audio/audio.mp3"],
  });
  document
    .querySelector("button")
    .addEventListener("click", () => sound.play());
</script>
