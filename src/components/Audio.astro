<button
  class="audio"
  id="play"
  role="button"
  aria-label="音声を再生する"
  aria-pressed="mixed"
>
  <img
    src="/assets/play.svg"
    alt="audioのアイコン"
    width="30"
    height="30"
  /></button
>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  .audio {
    background-color: #fafafa;
    border-radius: 3px;
    border: solid 1px #e4e4e7;
    border-radius: 3px;
    padding: 0.3em;
    font-size: 2rem;
    vertical-align: bottom;
    margin-right: 1.6rem;
    transition: 0.5s all;
    line-height: 0;
    @include v.mq(w683) {
      padding: 0.15em 0.5em;
    }
    &:hover {
      background-color: v.$light-mode-bg;
    }
  }
  :root[class="dark-mode"] {
    .audio {
      color: v.$dark-mode-text;
      background-color: v.$dark-mode-bg;
      border: solid 2px v.$dark-mode-border;
    }
  }
</style>
<script is:inline>
  const playBtn = document.getElementById("play");
  var sound = new Howl({
    src: ["/assets/audio/audio.mp3"],
  });
  playBtn?.addEventListener("click", () => {
    sound.play();
    playBtn.setAttribute("aria-pressed", "true");
    sound.on("play", () => {
      playBtn.setAttribute("aria-pressed", "true");
    });
    sound.on("end", function () {
      playBtn.setAttribute("aria-pressed", "false");
    });
  });
</script>
