<button
  class="audio"
  id="play"
  role="button"
  aria-label="音声を再生する"
  aria-pressed="false">▷</button
>

<style lang="scss">
  @use "../styles/variables.scss" as v;
  .audio {
    background-color: #fafafa;
    border-radius: 3px;
    border: solid 1px #e4e4e7;
    border-radius: 3px;
    padding: 0.2em;
    font-size: 2rem;
    vertical-align: bottom;
    margin-right: 1.6rem;
    margin-top: 1em;
    transition: 0.5s all;
    @include v.mq(w683) {
      padding: 0.15em 0.5em;
    }
    &:hover {
      background-color: #fff;
    }
  }
  :root[class="dark-mode"] {
    .audio {
      color: #fff;
      background: #0f0f11;
      border: solid 2px #27272a;
    }
  }
</style>
<script is:inline>
  const playBtn = document.getElementById("play");
  var sound = new Howl({
    src: ["/dist/assets/audio/audio.mp3"],
  });
  playBtn?.addEventListener("click", () => {
    console.log("hello");
    sound.play();
  });
</script>
